# Name: PostgreSQL 9.4 Server monitor script for monit
# Author: @alandwarinasia
# Usage: place in /etc/monit.d/

check process pgsql with pidfile /var/run/postgresql-9.4.pid
   start program  "/etc/init.d/postgresql-9.4 start"
   stop program  "/etc/init.d/postgresql-9.4 stop"
   if failed host localhost port 5432 protocol pgsql then restart
   if 5 restarts within 5 cycles then timeout
